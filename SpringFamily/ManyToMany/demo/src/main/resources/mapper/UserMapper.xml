<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">
    <resultMap id="UserMapper" type="com.example.demo.domain.User">
        <id property="id" column="id" />
        <result property="username" column="username" />
        <result property="loginname" column="loginname" />
        <result property="password" column="password" />
        <result property="phone" column="phone" />
        <result property="address" column="address" />
        <!--一对多关联映射-->
        <collection property="orders" javaType="ArrayList"
                    column="id" ofType="com.example.demo.domain.Order"
                    select="com.example.demo.mapper.OrderMapper.selectOrderByUserId"
                    fetchType="lazy">
            <id property="id" column="id" />
            <result property="code" column="code" />
            <result property="total" column="total" />
        </collection>
    </resultMap>

    <select id="selectUserById"  parameterType="INTEGER" resultMap="UserMapper">
        select * from tb_user
        where id = #{id}
    </select>

</mapper>